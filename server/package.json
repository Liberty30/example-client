{
    "name": "server",
    "version": "1.0.0",
    "description": "DSNP SDK Example Client Server",
    "author": "Project Liberty",
    "repository": {
        "type": "git",
        "url": "https://github.com/LibertyDSNP/example-client"
    },
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts",
        "serve": "node src/server.ts",
        "watch-node": "nodemon src/server.ts",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "jest --forceExit --coverage --verbose",
        "watch-test": "npm run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "tsc && eslint \"**/*.{js,ts}\"",
        "format": "eslint \"**/*.{js,ts}\" --quiet --fix",
        "serve-debug": "nodemon --inspect dist/server.js"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "node-fetch": "^2.6.0",
        "node-localstorage": "^2.1.5",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/bignumber.js": "^5.0.0",
        "@types/body-parser": "^1.17.1",
        "@types/compression": "^1.0.1",
        "@types/concurrently": "^4.1.0",
        "@types/eslint": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/jest": "^24.0.23",
        "@types/node": "^12.7.8",
        "@types/node-fetch": "^2.5.5",
        "@types/node-localstorage": "^1.3.0",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^2.3.1",
        "@typescript-eslint/parser": "^2.3.1",
        "acorn": "^7.3.1",
        "concurrently": "^5.0.0",
        "eslint": "^6.4.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-jest": "^22.6.4",
        "eslint-plugin-prettier": "^3.1.0",
        "jest": "^24.9.0",
        "jest-junit": "^6.4.0",
        "nodemon": "^1.19.2",
        "prettier": "1.18.2",
        "shelljs": "^0.8.3",
        "supertest": "^4.0.2",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.4.1",
        "typescript": "^3.6.3"
    }
}
